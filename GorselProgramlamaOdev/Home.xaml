<Window x:Class="GorselProgramlamaOdev.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GorselProgramlamaOdev"
        mc:Ignorable="d"
        Title="Anasayfa" Height="350" Width="600">
    <Grid Background="Black">
        <DataGrid MinColumnWidth="75" MinRowHeight="32"  Name="bilgi" Height="59" Margin="40,27,40,0" Grid.Column="0" AutoGenerateColumns="False" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ad" Binding="{Binding Ad}" Width="*"/>
                <DataGridTextColumn Header="Soyad" Binding="{Binding Soyad}" Width="*"/>
                <DataGridTextColumn Header="Öğrenci No" Binding="{Binding OgrenciNo}" Width="*"/>
                <DataGridTextColumn Header="Bölüm" Binding="{Binding Bolum}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="Giris" Content="Uygulamaya Gİt" FontSize="45" FontFamily="Century" Background="#FFBB0000" Margin="100,150,100,0" Click="Giris_Click" Foreground="#FFEEEEEE" Height="80" VerticalAlignment="Top" />
    </Grid>
</Window>
